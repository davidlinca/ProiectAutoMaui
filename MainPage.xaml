<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectAutoMaui.MainPage"
             Title="Service Auto">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Service Auto"
               FontSize="32"
               HorizontalOptions="Center"/>

        <Button Text="Clients"
                Clicked="OnClientsButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

        <Button Text="Cars"
                Clicked="OnCarsButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

        <Button Text="Services"
                Clicked="OnServicesButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

        <Button Text="Appointments"
                Clicked="OnAppointmentsButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>
